{
  "ConnectionStrings": {
    "DefaultConnection": "Server=DESKTOP-L9DFS85\\MSSQLSERVER01;Database=HospitalAppointmentSystemDb;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "RabbitMQ": "amqp://guest:guest@localhost:5672/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/hospital-appointment-system-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "HospitalAppointmentSystem",
    "Audience": "HospitalAppointmentSystemUsers",
    "ExpirationInMinutes": 60
  },
  "SendGrid": {
    "ApiKey": "YOUR_SENDGRID_API_KEY_HERE",
    "FromEmail": "noreply@hospitalappointment.com",
    "FromName": "Hospital Appointment System"
  },
  "Twilio": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID_HERE",
    "AuthToken": "YOUR_TWILIO_AUTH_TOKEN_HERE",
    "FromPhoneNumber": "+1234567890"
  },
  "AllowedHosts": "*"
}
